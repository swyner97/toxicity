<div class="card">
  <div class="card-header">
    <h2>Login</h2>
  </div>
  <form id="login-form" class="card-body">
    <div>
      <label for="username-input-login">Username</label>
      <input type="text" id="username-input-login" style="background-color:white"/>
    </div>
    <div>
      <label for="password-input-login" class="form-label">Password</label>
      <input type="password" id="password-input-login" style="background-color:white" />
    </div>
    <button type="submit" id="login-btn" class="btn">Login!</button>
    <a type="button" class="signUp"href="/signup">Sign up instead</a>
  </form>
</div>

<script src="/js/login.js"></script>